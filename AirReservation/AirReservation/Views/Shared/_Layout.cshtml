<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Airlines Reservation System</title>
    <link rel="icon" type="image/x-icon" href="~/Images/nilay.png" />


    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        #navh {
            background-color: #f0ae00;
            color: white;
        }

        #navB {
            color: #147eee;
        }
    </style>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".dropdown, .btn-group").hover(function () {
                var dropdownMenu = $(this).children(".dropdown-menu");
                if (dropdownMenu.is(":visible")) {
                    dropdownMenu.parent().toggleClass("open");
                }
            });
        });
    </script>
    <style>
        .bs-example {
            margin: 20px;
        }



        .dropdown:hover .dropdown-menu, .btn-group:hover .dropdown-menu {
            display: block;
        }

        .dropdown-menu {
            margin-top: 0;
        }

        .dropdown-toggle {
            margin-bottom: 2px;
        }

        .navbar .dropdown-toggle, .nav-tabs .dropdown-toggle {
            margin-bottom: 0;
        }
    </style>


</head>
<body>
    <div id="navh" class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Airlines Reservation", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:white; font-size:25px;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul id="navB" class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { }, new { @style = "font-size:16px;" })</li>

                    <li class="dropdown">
                        <a style="font-size:16px" class="dropdown-toggle" href="#" data-toggle="dropdown">
                            Reservation System <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Passenger", "Index", "PassengerInfoes", new { }, new { @style = "font-size:16px;" })</li>
                            <li>@Html.ActionLink("Passenger Related Data", "IndexSingle", "PassengerInfoes", new { }, new { @style = "font-size:16px;" })</li>
                            <li>@Html.ActionLink("Country", "Index", "Countries", new { }, new { @style = "font-size:16px;" })</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Flight Information", "Index", "FlightInfoes", new { }, new { @style = "font-size:16px;" })</li>
                            <li>@Html.ActionLink("Multiple Data Insert in Flight", "Sample", "FlightInfoes", new { }, new { @style = "font-size:16px;" })</li>
                            <li>@Html.ActionLink("Booking Information", "Index", "BookingFlights", new { }, new { @style = "font-size:16px;" })</li>


                        </ul>
                    </li>

                    <li>@Html.ActionLink("About", "About", "Home", new { }, new { @style = "font-size:16px;" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { }, new { @style = "font-size:16px;" })</li>
                </ul>
                @if (User.Identity.IsAuthenticated)
                {

                }
                @if (User.IsInRole("Admin"))
                {

                }

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Airlines Reservation System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
